<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="100"
             x:Class="Views.SelectedWinchDetailsView"
			 xmlns:model="using:Models"
			 x:DataType="model:WinchModel">
	<Panel>
		<WrapPanel Orientation="Horizontal">
			<StackPanel Orientation="Horizontal" Margin="5">
				<TextBlock Text="Data Source" Width="100" VerticalAlignment="Center"/>
				<TextBox MinWidth="130" Text="{ Binding WinchName }" IsReadOnly="True" Background="LightGray" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" Margin="5">
				<TextBlock Text="Cast Number"  Width="100" VerticalAlignment="Center"/>
				<TextBox x:Name="TextBoxCastNumber" Watermark="1"  Text="{Binding Path=CastNumberBox,Mode=TwoWay}" Width="10" VerticalAlignment="Center" />
			</StackPanel>
			
			<Button Content="Start/Stop" Margin="5" MinWidth="100" HorizontalContentAlignment="Center"/>
			<Button Content="Log Max" Margin="5" MinWidth="100" HorizontalContentAlignment="Center"/>
		</WrapPanel>
	</Panel>
</UserControl>
