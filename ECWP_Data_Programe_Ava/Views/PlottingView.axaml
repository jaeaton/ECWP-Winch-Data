<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Views"
			 xmlns:controls="clr-namespace:Views"
			 mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="450"
             x:Class="Views.PlottingView"
			 xmlns:model="clr-namespace:Models">
	<UserControl.DataTemplates>
		<DataTemplate DataType="model:WinchModel">
			<StackPanel>
				<controls:WinchPlotView/>
			</StackPanel>
		</DataTemplate>
	</UserControl.DataTemplates>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition MaxHeight="35"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<controls:PlotsConfigurationView/>
			<StackPanel  Grid.Column="1">
				<ItemsControl Items="{ Binding PlottingWinches}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel Margin="5" Orientation="Horizontal"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>
			</StackPanel>
		</Grid>
		<controls:StartStopSaveView Grid.Row="1"/>
	</Grid>
</UserControl>
