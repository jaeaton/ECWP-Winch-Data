<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="Views.WinchDetailDataOutView">
	<StackPanel Margin="10">
		<RadioButton Content="TCP" x:Name="RadioButtonSendTCP" GroupName="OutputType"/>
		<RadioButton Content="UDP" x:Name="RadioButtonSendUDP" GroupName="OutputType"/>
		<RadioButton Content="Serial" x:Name="RadioButtonSendSerial" GroupName="OutputType"/>
		
		<Border BorderThickness="1" BorderBrush="Gray" IsVisible="{Binding ElementName=RadioButtonSendTCP, Path=IsChecked}">

			<StackPanel Margin="10" IsVisible="{Binding ElementName=RadioButtonSendTCP, Path=IsChecked}">
				<StackPanel Orientation="Horizontal" >
					<TextBlock Text="Destination" Width="90" VerticalAlignment="Center" />
					<TextBox Watermark="Identifier" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.PortNumber,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel>
					<RadioButton Content="MTNW Format"  HorizontalContentAlignment="Right" GroupName="udpRadioButtons" IsChecked="{Binding CurrentWinch.UdpFormatMtnw, FallbackValue='False'}"/>
					<RadioButton Content="UNOLS Format" HorizontalContentAlignment="Right" GroupName="udpRadioButtons" IsChecked="{Binding CurrentWinch.UdpFormatUnols, FallbackValue='True'}"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="5"  >
					<TextBlock Text="Port Number" Width="90" VerticalAlignment="Center" />
					<TextBox  Watermark="50000" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.PortNumber,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="5"  >
					<TextBlock Text="IP Address" Width="90" VerticalAlignment="Center" />
					<TextBox  Watermark="192.168.1.121" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.TcpIpAddress,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Button Content="Add" HorizontalContentAlignment="Center" Width="160" Margin="2"/>
					<Button Content="Remove" HorizontalContentAlignment="Center" Width="160" Margin="2"/>
				</StackPanel>
			</StackPanel>
		</Border>
		
		<Border BorderThickness="1" BorderBrush="Gray" IsVisible="{Binding ElementName=RadioButtonSendUDP, Path=IsChecked}">
			
			<StackPanel Margin="10" IsVisible="{Binding ElementName=RadioButtonSendUDP, Path=IsChecked}">
				<StackPanel Orientation="Horizontal" >
					<TextBlock Text="Destination" Width="90" VerticalAlignment="Center" />
					<TextBox Watermark="Identifier" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.PortNumber,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel>
					<RadioButton Content="MTNW Format"  HorizontalContentAlignment="Right" GroupName="udpRadioButtons" IsChecked="{Binding CurrentWinch.UdpFormatMtnw, FallbackValue='False'}"/>
					<RadioButton Content="UNOLS Format" HorizontalContentAlignment="Right" GroupName="udpRadioButtons" IsChecked="{Binding CurrentWinch.UdpFormatUnols, FallbackValue='True'}"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="5"  >
					<TextBlock Text="Port Number" Width="90" VerticalAlignment="Center" />
					<TextBox x:Name="TextBoxDestinationPort" Watermark="50000" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.PortNumber,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="5"  >
					<TextBlock Text="IP Address" Width="90" VerticalAlignment="Center" />
					<TextBox x:Name="TextBoxDestinationIPAdress" Watermark="192.168.1.121" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.TcpIpAddress,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Button Content="Add" HorizontalContentAlignment="Center" Width="160" Margin="2"/>
					<Button Content="Remove" HorizontalContentAlignment="Center" Width="160" Margin="2"/>
				</StackPanel>
			</StackPanel>
		</Border>
		
		<Border BorderThickness="1" BorderBrush="Gray" IsVisible="{ Binding ElementName=RadioButtonSendSerial,Path=IsChecked }">
			<StackPanel Margin="10" IsVisible="{ Binding ElementName=RadioButtonSendSerial,Path=IsChecked }">
				<StackPanel Orientation="Horizontal" >
					<TextBlock Text="Destination" Width="90" VerticalAlignment="Center" />
					<TextBox Watermark="Identifier" IsEnabled="{Binding Path=UserInputsEnable}" Text="{Binding CurrentWinch.OutputCommunication.PortNumber,Mode=TwoWay}" Width="130" VerticalAlignment="Center"></TextBox>
				</StackPanel>
				<StackPanel>
					<RadioButton Content="MTNW Format"  HorizontalContentAlignment="Right" GroupName="serialRadioButtons"  IsChecked="{Binding CurrentWinch.SerialFormatMtnw,FallbackValue='False'}" />
					<RadioButton Content="UNOLS Format" HorizontalContentAlignment="Right" GroupName="serialRadioButtons" IsChecked="{Binding CurrentWinch.SerialFormatUnols,FallbackValue='True' }" />
				</StackPanel>
				<StackPanel  Margin="5" Orientation="Horizontal">
					<TextBlock Text="Serial Port" Width="100" VerticalAlignment="Center"/>
					<ComboBox Name="serialPorts" Width="100" SelectedItem="{Binding CurrentWinch.SerialPortOutput,Mode=TwoWay}" ItemsSource="{ Binding Path=AvailableSerialPorts }" />
				</StackPanel>
				<StackPanel  Margin="5" Orientation="Horizontal">
					<TextBlock Text="Baud Rate" Width="100" VerticalAlignment="Center" />
					<ComboBox Width="100" SelectedItem="{ Binding CurrentWinch.BaudRateOutput,Mode=TwoWay }" ItemsSource="{ Binding Path=AvailableBaudRates }" SelectedIndex="0"/>
				</StackPanel>
				<StackPanel  Margin="5" Orientation="Horizontal">
					<TextBlock Text="Data Bits" Width="100" VerticalAlignment="Center"/>
					<ComboBox Width="100" SelectedItem="{Binding CurrentWinch.SerialPortOutput,Mode=TwoWay}" ItemsSource="{ Binding Path=AvailableDataBits }" />
				</StackPanel>
				<StackPanel  Margin="5" Orientation="Horizontal">
					<TextBlock Text="Parity" Width="100" VerticalAlignment="Center"/>
					<ComboBox Width="100" SelectedItem="{Binding CurrentWinch.SerialPortOutput,Mode=TwoWay}" ItemsSource="{ Binding Path=AvailableParity }" />
				</StackPanel>
				<StackPanel  Margin="5" Orientation="Horizontal">
					<TextBlock Text="Stop Bits" Width="100" VerticalAlignment="Center" />
					<ComboBox Width="100" SelectedItem="{ Binding CurrentWinch.BaudRateOutput,Mode=TwoWay }" ItemsSource="{ Binding Path=AvailableStopBits }" SelectedIndex="0"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<Button Content="Add" HorizontalContentAlignment="Center" Width="160" Margin="2"/>
					<Button Content="Remove" HorizontalContentAlignment="Center" Width="160" Margin="2"/>
				</StackPanel>
			</StackPanel>
		</Border>		
	</StackPanel>
</UserControl>
